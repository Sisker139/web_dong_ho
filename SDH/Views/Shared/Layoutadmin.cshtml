<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark" style="height: 70px;">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Trang Admin</span>
        </div>  
    </nav>

    <!-- Full height layout with sidebar + content -->
    <div class="container-fluid">
        <div class="row" style="height: calc(100vh - 70px);">
            <!-- 56px là chiều cao mặc định của navbar -->
            <!-- Sidebar -->
            <div class="col-md-2 bg-dark text-white d-flex flex-column overflow-auto">
                <ul class="nav flex-column pt-3">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="QuanlySP" asp-action="Index">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="QuanlyDH" asp-action="Index">Đơn hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="QuanlyTK" asp-action="Index">Tài khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Trang chủ</a>
                    </li>
                </ul>
            </div>

            <!-- Main content -->
            <div class="col-md-10 overflow-auto p-4">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
